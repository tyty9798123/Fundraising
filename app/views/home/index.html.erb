<%= render partial: 'layouts/carousel' %>

<div class="container mt-3">
    <div style="font-size: 30px;">
        正在募資
    </div>
    <div class="row">
        <% @project.each do |p| %>
            
            <div class="card col-lg-4 col-md-6 col-sm-12" style="margin-top: 10px; padding: 10px;">
                <img src="<%= p.image_url %>" class="card-img-top" height="400" >
                <div class="card-body">
                <h5 class="card-title"><a href='/project/<%= p.id %>'><%= p.name %></a></h5>
                <p class="card-text"><%= p.description %></p>
                <p><b>募資中</b></p>
                <p class="card-text"><span style="color: red;">已募得: NT$ 0</span> / <span style="color: grey; font-size: 14px;">NT$ <%= p.target_money %> </span></p>
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"  style="width: 75%"></div>
                </div>
                <p class="mt-3">已經有 0 個人贊助</p>
                </div>
            </div>
        <% end %>
    </div>
</div>